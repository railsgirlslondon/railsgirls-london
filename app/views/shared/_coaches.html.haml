- if coaches.any?
  %section.separator#coaches--anchor
    .container
      %h1.block-title
        Organisers & Coaches

  %section.separator
    .container.coaches--container
      - coaches.each do |coach|
        .coach-img__item
          .coach-details
            - if coach.twitter
              = link_to "https://twitter.com/#{coach.twitter}", title: "@#{coach.twitter}" do
                = image_tag gravatar_url(coach.email), class: 'img-circle'
            - else
              = image_tag gravatar_url(coach.email), class: 'img-circle'
            %small
              %strong
                = coach.name

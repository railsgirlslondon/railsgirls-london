- if coaches.any?
  %section.coaches
    %legend= title
    .row
      %ul.coaches.inline
        - coaches.each do |coach|
          %li.span1
            %h5
              = link_to "https://twitter.com/#{coach.twitter}", title: "@#{coach.twitter}" do
                = image_tag gravatar_url(coach.email), class: 'img-circle'
            %small
              %strong
                = coach.name
              = link_to "https://twitter.com/#{coach.twitter}" do
                %small= "@#{coach.twitter}"
            %br

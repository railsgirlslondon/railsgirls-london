.section
  .splash.landing
    .container
      %h1 Rails Girls London
      %h2 Making technology more approachable for women
      - if @upcoming_event.any?
        .next-event.text-center
          %h3
            Next Event:
          %h1
            = @upcoming_event.first.dates
            %br
            = link_to "View more details & apply", event_path(@upcoming_event.first), class: "btn btn-primary btn-lg btn-hero"

.container
  .row
    .col-md-12
      = render 'layouts/messages'

.section.separator.title
  .container
    .row
      .col-md-12
        #about
          %h1
            About Rails Girls

.section.separator
  .container
    .row
      .col-md-8
        .about-img
          .thumbnail
            = image_tag "rails_girls_may_2015_large.jpg", class: "img-responsive"
        %h4
          Making technology more approachable for women.
          Learn sketching, prototyping, basic programming and get introduced to the world of technology.
          %br
          %br
          Our aim is to give tools and a community for women to understand technology and to build their ideas. We do this by providing a great experience on building things and by making technology more approachable.

      .col-md-4
        .row
          = render 'layouts/social_media'
        .row
          = render 'layouts/twitter_snippet'



= render @upcoming_event.any? ? "events/upcoming" : "events/next_expected"
= render "events/past"


.section.separator
  .container
    #sponsors
      .row
        .col-md-12
          %h1 Sponsors
          - @sponsors.each_slice(6) do |sponsors|
            .row
              - sponsors.each do |sponsor|
                .col-md-2
                  .thumbnail.no-border
                    = image_tag sponsor.image_url


.section
  .container
    = render "sponsor/info"

%html
  %head
    :sass
      $width: 65%
      $main-color: #E0330C
      $gray: #E5E5E5
      $base-color: #FFFFFF

      body
        font-family: Helvetica Neue,Helvetica,Arial,sans-serif

      header
        height: 100px
        background-color: $main-color

      nav
        width: $width
        margin: 0 auto

      highlight
        color: $main-color

      .white
        color: $base-color

      .lead
        font-size: 22px

      #logo
        a
          img
            background-color: #FFFFFF
            margin-top: 10px
            border: 10px solid #FFFFFF

      .inline
        display: inline-block

      #main
        width: $width
        border: 1px solid $gray
        padding: 40px
        margin: 50px auto
        background-color:Â #FFFFFF

        a
          color: $main-color
          text-decoration: none
          border-bottom: 1px dotted $main-color

        .social-media
          margin-top: 10px

          a
            text-decoration: none
            border-bottom: none

        hr
          border-top: 1px solid $gray

        h3
          border-bottom: 1px solid $gray
          padding-bottom: 10px
          margin-bottom: 15px
          font-size: 28.5px

      .rails-girls-heart
        margin-top: 30px

      .left
        width: $width

      .right
        width: 24%
        padding: 0 0 0 50px

      .title
        border-left: 4px solid $gray
        font-size: 26.5px
        margin: 15px 0
        padding: 0 10px

      .footer
        font-size: 21px


  %body
    %header
      %nav
        #logo.inline
          =link_to full_url_for(city_path(@city)) do
            = image_url_for "railsgirls-london.png"
        %div.inline.white
          %h2{ style: 'margin-left: 20px;' } Rails Girls #{@city.name rescue ""}
          %br

        .pull-right{ style: 'float: right' }
          .rails-girls-heart
            %a.rails-girls{ href: "http://railsgirls.com", title: "Rails Girls" }
              = image_url_for "railsgirls-heart.png"

    #main
      = yield
      %hr
      .footer
        %p
          If you have any questions,
          %span=mail_to "send us an email", @city.email
          %span>.

          %br
        %p
          %br
          %br
          Cheers,
          %br
          Rails Girls #{@city.name} Team.

          %br
          %br

        Keep in touch!
        .social-media.text-center
          =link_to "http://twitter.com/#{@city.twitter}", class: "btn btn-media" do
            =image_url_for "twitter.png"
          =link_to "https://plus.google.com/b/104252944343767158344", class: "btn btn-media" do
            =image_url_for "gplus.png"
          =link_to "https://www.facebook.com/railsgirls#{@city.slug}", class: "btn btn-media" do
            =image_url_for "facebook.png"
          =link_to "https://github.com/railsgirlslondon/railsgirls-#{@city.slug}", class: "btn btn-media" do
            =image_url_for "github.png"

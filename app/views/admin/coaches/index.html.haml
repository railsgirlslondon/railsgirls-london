#admin_coaches
  %h2 Coaches

  %table.table
    %tr
      %th Name
      %th Email
      %th
      %th

    - @coaches.each do |coach|
      %tr
        %td= link_to  coach.name, [:admin, coach]
        %td= coach.email
        %td= link_to 'Edit', edit_admin_coach_path(coach), class: "btn"
        %td= link_to 'Destroy', [:admin, coach], class: "btn", :method => :delete, :data => { :confirm => 'Are you sure?' }

  %hr

  = link_to 'Add Coach', new_admin_coach_path

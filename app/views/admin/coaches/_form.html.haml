= simple_form_for([:admin, @coach], html: { class: 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :email
    = f.input :twitter
    = f.input :phone_number
    = f.input :dietary_restrictions
    = f.input :notes

  .form-actions
    = f.button :submit, class: 'btn btn-large'

    %td= @registration.phone_number
  %tr
    %td Twitter
    %td= @registration.twitter
  %tr
    %td Address
    %td= @registration.address
  %tr
    %td UK Resident
    %td= @registration.uk_resident
  %tr
    %td OS
    %td= @registration.os
